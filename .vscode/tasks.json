{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "dev",
            "group": "build",
            "isBackground": true,
            "label": "npm: dev",
            "detail": "next dev --turbopack",
            "problemMatcher": {
                "owner": "nextjs",
                "source": "nextjs",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*webpack.*compiled.*$",
                    "endsPattern": "^.*Local:.*http://localhost:\\d+.*$"
                }
            }
        }
    ]
}